<div class="row">
  <div class="col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-1 col-sm-offset-1">
    <div class="bs-component">
      <%= simple_form_for army , :html => { class: "form-horizontal" } do |f| %>
        <div class="row">
          <div class="col-md-3 col-sm-6"><%= f.input :name %></div>
          <div class="col-md-6 col-sm-12"><%= f.input :description %></div>
        </div>
        <%= field_set_tag 'Army Units' do %>
          <% if @army.units.any? %>
            <%= f.fields_for :units do |builder| %>
              <%= render 'unit_fields', f: builder %>
            <% end %>
          <% end %>
            <%= link_to_add_fields "+ Add Units", f, :units %>
        <% end %>
        <br>
        <div class="actions">
          <%= f.submit :class => 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
